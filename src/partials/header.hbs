<header>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
  <nav class="navbar navbar-expand-lg custom-navbar fixed-top">
    <div class="container-fluid">
      <a class="navbar-logo" href="{{baseUrl}}">
        <img
          src="https://devportal-content.s3.us-east-1.amazonaws.com/ABCOrganization/ECI%20logo.png"
          alt="Logo"
        />
      </a>
      <div class="navbar-nav">
        <a class="nav-link" href="{{baseUrl}}/apis">APIs</a>
        <a class="nav-link" href="{{baseUrl}}/pricing">Pricing</a>
        <a class="nav-link" href="{{baseUrl}}/legal">Legal</a>
        <a class="nav-link" href="{{baseUrl}}/#">Get Started</a>
        <a class="nav-link" href="{{baseUrl}}/#">Application</a>
      </div>
      {{#if profile}}
        <div class="nav justify-content-end" id="profile-section">
          <div class="dropdown">
            <a
              class="nav-link dropdown-toggle profile-link"
              href="#"
              id="navbarDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="/images/profile.svg"
                alt="Profile"
                class="profile-icon"
              />
              <span>Hi {{profile.name}}</span>
            </a>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="navbarDropdown"
            >
              <li class="dropdown-item userprofile-info">
                <img src="/images/profile.svg" class="avatar" />
                <div class="user-info">
                  <span class="user-name">{{profile.name}}</span>
                  <span class="user-email">{{profile.email}}</span>
                </div>
              </li>
              <li class="dropdown-item"><i class="fas fa-cog"></i><a
                  href="#"
                >Profile Settings</a></li>
              <li class="dropdown-item"><i class="fas fa-question-circle"></i><a
                  href="#"
                >Help Center</a></li>
              <li class="dropdown-item"><i class="fas fa-arrow-up"></i><a
                  href="#"
                >Upgrade Plan</a></li>
              <li><hr /></li>
              <li class="dropdown-item"><i class="fas fa-sign-out-alt"></i><a
                  href="{{baseUrl}}/logout"
                >Sign Out</a></li>
            </ul>
          </div>
        </div>
      {{else}}
        <div class="navbtn justify-content-end" id="auth-section">
          <a class="btn custom-signup-btn" href="{{baseUrl}}/signup">Sign Up</a>
          <a class="btn custom-login-btn" href="{{baseUrl}}/login">Log In</a>
        </div>
      {{/if}}
    </div>
  </nav>
</header>