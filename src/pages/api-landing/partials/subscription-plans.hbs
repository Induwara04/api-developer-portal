<section id="subscription">
    <div class="container-fluid howwork-content" name="HowItWorks">
        <div class="col-lg-12 dev-header" style="padding-top: 5%;">
            <h2>Available Subsription Plans</h2>
        </div>
        <div class="row card-section">
            {{#apiMetadata.subscriptionPlans}}
            <div class="col-lg-4">
                <div class="card dev-card custom-api-card">
                    <div class="card-body">
                        <h5 class="work-apicard-title">{{displayName}}</h5>
                        <h5 class="work-apicard-title">{{amount}}$</h5>
                        <p>Description: {{description}}</p>

                        <form action="/subscribe" method="POST">
                            <input type="hidden" name="apiId" value={{apiName}}>
                            <input type="hidden" name="userName" value="divya@wso2.com">
                            <input type="hidden" name="subPlan" value={{policyName}}>
                            <input type="hidden" name="subID" value={{subscriptionID}}>
                            {{#if (eq status "Subscribed")}}
                            <input type="hidden" name="action" value="unsubscribe">
                            <button type="submit" class="btn btn-secondary">Unsubscribe</button>
                            {{else}}
                            <input type="hidden" name="action" value="subscribe">
                            <button type="submit" class="btn btn-primary">Subscribe</button>
                            {{/if}}
                        </form>
                    </div>
                </div>
            </div>
            {{/apiMetadata.subscriptionPlans}}
        </div>
    </div>
</section>